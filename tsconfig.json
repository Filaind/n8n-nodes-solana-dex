{
  "compilerOptions": {
    "lib": ["es2019", "es2020", "es2022"],
    "module": "commonjs",
    "outDir": "./dist",
    "target": "es2019",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": false
  },
  "include": ["nodes/**/*", "credentials/**/*"]
}